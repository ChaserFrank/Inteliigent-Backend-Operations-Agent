# Django AI Agent Exception Middleware - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# DJANGO SETTINGS
# ============================================================================
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_NAME=hackathon_db
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# ============================================================================
# AI AGENT SERVICE CONFIGURATION
# ============================================================================

# Enable/disable AI agent integration
AI_AGENT_ENABLED=true

# AI agent service endpoint (where exception data is sent)
# Development:
AI_AGENT_ENDPOINT=http://localhost:8001/api/v1/analyze-error
# Production:
# AI_AGENT_ENDPOINT=https://your-ai-agent-service.com/api/v1/analyze-error

# API key for AI agent service authentication (if required)
AI_AGENT_API_KEY=your-ai-agent-api-key-here

# Timeout for AI agent requests (seconds)
AI_AGENT_TIMEOUT=5

# Maximum request body size to send (bytes)
AI_AGENT_MAX_BODY_SIZE=10000

# ============================================================================
# SERVER IDENTIFICATION
# ============================================================================
HOSTNAME=web-server-01
APP_VERSION=1.0.0

# ============================================================================
# CELERY CONFIGURATION (Optional)
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# CORS CONFIGURATION (Optional)
# ============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000